{
  "version": "2.0",
  "environmentReqs": {
    "build": ["arm-none-eabi"],
    "build-docs": ["doxygen"]
  },
  "artifacts": {
    "file": [
      {
        "source": "*.bin",
        "insertTag": true,
        "destination": "currDir"
      },
      {
        "source": "*.dfu",
        "insertTag": true,
        "destination": "currDir"
      }
    ]
  },
  "targets": {
    "cf2": [
      "PLATFORM=cf2"
    ],
    "bolt": [
      "PLATFORM=bolt"
    ],
    "tag": [
      "PLATFORM=tag"
    ]
  }
}
